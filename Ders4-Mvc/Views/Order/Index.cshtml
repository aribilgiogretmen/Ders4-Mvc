@model OrderViewModel

<h2>Kitap Siparişi</h2>

<form asp-action="Index" method="post" class="needs-validation" novalidate>


    <div class="mb-3">

        <label asp-for="CustomerId" class="form-label"></label>
        <select class="form-select" id="customerId" name="CustomerID" asp-for="CustomerId" asp-items="@(new SelectList(Model.Customers,"Id","Name"))">
            <option value="">Müşteri Seçin</option>

        </select>

    </div>

    <div class="mb-3">

        <label asp-for="BookId" class="form-label"></label>
        <select class="form-select" id="bookId" name="BookId" asp-for="BookId" asp-items="@(new SelectList(Model.Books,"Id","Title"))">
            <option value="">Kitap Seçin</option>

        </select>

    </div>

    <div class="mb-3">
        <label asp-for="OrderNo" class="form-label"></label>
        <input asp-for="OrderNo" type="text" class="form-control" />
    </div>

</form>

<button type="submit" class="btn btn-success">Kaydet</button>